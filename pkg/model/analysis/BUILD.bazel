    name = "generate_computer",
    srcs = ["computer.json"],
    outs = ["computer.go"],
    cmd = "$(location //pkg/evaluation/generate_computer) $(location computer.json) > $@",
    tools = ["//pkg/evaluation/generate_computer"],
